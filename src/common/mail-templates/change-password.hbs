<body
  marginheight="0"
  topmargin="0"
  marginwidth="0"
  style="margin: 0px; background-color: #f2f3f8"
  leftmargin="0"
>
  <!--100% body table-->
  <table
    cellspacing="0"
    border="0"
    cellpadding="0"
    width="100%"
    bgcolor="#f2f3f8"
    style="
      @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;1,100&display=swap');
      font-family: 'Roboto', sans-serif;
      letter-spacing: 0px;
    "
  >
    <tr>
      <td>
        <table
          style="background-color: #f2f3f8; max-width: 670px; margin: 0 auto"
          width="100%"
          border="0"
          align="center"
          cellpadding="0"
          cellspacing="0"
        >
          
            <td style="height: 40px">&nbsp;</td>
          </tr>
          <tr>
            <td>
              <table
                width="95%"
                border="0"
                align="center"
                cellpadding="0"
                cellspacing="0"
                style="
                  max-width: 670px;
                  background: #fff;
                  border-radius: 3px;
                  text-align: center;
                  -webkit-box-shadow: 0 6px 18px 0 rgba(0, 0, 0, 0.06);
                  -moz-box-shadow: 0 6px 18px 0 rgba(0, 0, 0, 0.06);
                  box-shadow: 0 6px 18px 0 rgba(0, 0, 0, 0.06);
                "
              >
                <tr>
                  <td style="height: 40px">&nbsp;</td>
                </tr>
                <tr>
                  <td style="padding: 0 35px">
                    <h1
                      style="
                        color: #1e1e2d;
                        font-weight: 700;
                        margin: 0;
                        font-size: 32px;
                        font-family: 'Rubik', sans-serif;
                      "
                    >
                      Forgot your password?
                    </h1>
                    <span
                      style="
                        display: inline-block;
                        vertical-align: middle;
                        margin: 25px 0 26px;
                      "
                    ></span>

                    <p
                      style="
                        color: #455056;
                        font-weight: 500;
                        font-size: 15px;
                        line-height: 24px;
                        margin: 0;
                      "
                    >
                      That's okay, it hapens! Click on the button below to reset
                      your password
                    </p>
                    <a
                      href="{{ url }}"
                      style="
                        background: #101010;
                        text-decoration: none !important;
                        font-weight: 700;
                        margin-top: 35px;
                        margin-bottom: 35px;
                        color: #fff;
                        text-transform: uppercase;
                        font-size: 14px;
                        padding: 15px 30px;
                        display: inline-block;
                      "
                      >Reset Password</a
                    >
                    <p
                      style="
                        color: #a07575;
                        font-weight: 500;
                        font-size: 14px;
                        line-height: 24px;
                        margin: 0;
                      "
                    >
                      If you did not request a password reset, you can safely
                      ignore this email.
                    </p>
                  </td>
                </tr>
                <tr>
                  <td style="height: 40px">&nbsp;</td>
                </tr>
              </table>
            </td>
          </tr>

          <tr>
            <td style="height: 20px">&nbsp;</td>
          </tr>

          <tr>
            <td style="text-align: center">
              <p
                style="
                  font-size: 14px;
                  color: rgba(69, 80, 86, 0.7411764705882353);
                  line-height: 18px;
                  margin: 0 0 0;
                "
              >
                &copy; <strong>Better City</strong>
              </p>
            </td>
          </tr>
          <tr>
            <td style="height: 80px">&nbsp;</td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
  <!--/100% body table-->
</body>
